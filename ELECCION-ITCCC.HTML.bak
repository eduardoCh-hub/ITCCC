        // Database version for reset control
        const currentDatabaseVersion = "2.0";
        const storedDatabaseVersion = localStorage.getItem('databaseVersion');

        // Reset localStorage if the database version has changed
        if (storedDatabaseVersion !== currentDatabaseVersion) {
            localStorage.setItem('students', JSON.stringify(defaultStudents));
            localStorage.setItem('votes', JSON.stringify({ Morazan: 0, Cambio: 0 }));
            localStorage.setItem('databaseVersion', currentDatabaseVersion);
        }

        // Load data from localStorage
        let students = JSON.parse(localStorage.getItem('students')) || defaultStudents;
        let votes = JSON.parse(localStorage.getItem('votes')) || { Morazan: 0, Cambio: 0 };

        // Save data to localStorage
        function saveData() {
            localStorage.setItem('students', JSON.stringify(students));
            localStorage.setItem('votes', JSON.stringify(votes));
        }

        // Initialize Chart.js
        const ctx = document.getElementById('resultsChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['MOVIMIENTO MORAZÁN', 'MOVIMIENTO CAMBIO Y ESPERANZA'],
                datasets: [{
                    data: [votes.Morazan, votes.Cambio],
                    backgroundColor: ['#3B82F6', '#FBBF24'],
                    borderColor: ['#fff', '#fff'],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top', labels: { font: { family: 'Montserrat', size: 14 }, color: '#000000' } },
                    title: { display: true, text: 'Resultados de las Elecciones', font: { family: 'Raleway', size: 20 }, color: '#000000' }
                },
                animation: {
                    duration: 1000,
                    easing: 'easeInOutQuart'
                }
            }
        });

        function verifyStudent() {
            const identity = document.getElementById('identity').value.trim();
            const message = document.getElementById('message');
            const studentInfo = document.getElementById('student-info');
            const inputSection = document.getElementById('input-section');

            if (!/^\d{13}$/.test(identity)) {
                message.textContent = "Por favor, ingrese un número de identidad válido (13 dígitos).";
                return;
            }

            const student = students.find(s => s.identity === identity);
            if (!student) {
                message.textContent = "Estudiante no encontrado.";
                return;
            }

            if (student.hasVoted) {
                message.textContent = "Este estudiante ya ha votado.";
                return;
            }

            message.textContent = "";
            document.getElementById('student-name').textContent = student.name;
            document.getElementById('student-grade').textContent = student.grade;
            document.getElementById('student-section').textContent = student.section;
            studentInfo.classList.remove('hidden');
            inputSection.classList.add('hidden');
        }

        function vote(movement) {
            const identity = document.getElementById('identity').value.trim();
            const student = students.find(s => s.identity === identity);
            const message = document.getElementById('message');
            const studentInfo = document.getElementById('student-info');
            const inputSection = document.getElementById('input-section');

            if (student.hasVoted) {
                message.textContent = "Este estudiante ya ha votado.";
                return;
            }

            student.hasVoted = true;
            votes[movement]++;
            chart.data.datasets[0].data = [votes.Morazan, votes.Cambio];
            chart.update();

            // Save updated data to localStorage
            saveData();

            message.textContent = "¡Voto registrado con éxito!";
            studentInfo.classList.add('hidden');
            inputSection.classList.remove('hidden');
            document.getElementById('identity').value = "";
        }

        // Functions to show/hide results
        function showResults() {
            document.getElementById('results-section').classList.remove('hidden');
            document.getElementById('show-results-btn').classList.add('hidden');
            document.getElementById('hide-results-btn').classList.remove('hidden');
        }

        function hideResults() {
            document.getElementById('results-section').classList.add('hidden');
            document.getElementById('show-results-btn').classList.remove('hidden');
            document.getElementById('hide-results-btn').classList.add('hidden');
        }

        // Initialize particles.js
        particlesJS('particles-js', {
            particles: {
                number: { value: 80, density: { enable: true, value_area: 800 } },
                color: { value: '#ffffff' },
                shape: { type: 'circle' },
                opacity: { value: 0.5, random: true },
                size: { value: 3, random: true },
                line_linked: { enable: true, distance: 150, color: '#ffffff', opacity: 0.4, width: 1 },
                move: { enable: true, speed: 2, direction: 'none', random: false, straight: false, out_mode: 'out', bounce: false }
            },
            interactivity: {
                detect_on: 'canvas',
                events: { onhover: { enable: true, mode: 'repulse' }, onclick: { enable: true, mode: 'push' }, resize: true },
                modes: { repulse: { distance: 100, duration: 0.4 }, push: { particles_nb: 4 } }
            },
